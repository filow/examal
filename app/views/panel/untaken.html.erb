<div class="page-header">
  <h2>正在进行的考试 </h2>
</div>
<% unless @current.empty? %>
<div class="row">
<table class="table table-striped">
	<thead>
		<th>考试名称</th>
		<th>简介</th>
		<th>试题数量</th>
		<th>平均难度</th>
		<th>提供者</th>
		<th></th>
	</thead>
	<tbody>
		<% 	@current.each do |exam| %>
		<tr>
			<td><%= exam.name %></td>
			<td><%= exam.description %></td>
			<td><%= exam.questions.size %></td>
			<td><%= difficulty_level exam.average_difficulty %></td>
			<td><%= exam.teacher.name %></td>
			<td>
			<% if student=exam.students.find_by_id(@logged_student.id) %>
				<% begin %>
					<%= mark_tag student.contests[0].mark %> 
				<% rescue Exception => e %>
					
				<% end %>
			<% else %>
				<%= link_to "开始考试",panel_exam_path(exam),:class=>"btn btn-primary" %>
			<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<% else %>
目前没有正在进行的考试
<% end %>
